extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Página individual
    .w3-container
      table.w3-table-all
        tr
          th Nome
          th Idade
          th Género
          th Morada 
          th Modalidade
          th Clube
          th Resultado
          th Email
        
        tr
          td= e.nome.primeiro + " " + e.nome.último
          td= e.idade
          td= e.género
          td= e.morada
          td= e.modalidade
          td= e.clube
          td= e.resultado
          td= e.email

              
    footer.w3-container.w3-teal
      h5 Generated by emd::EngWeb2023 in #{d}
